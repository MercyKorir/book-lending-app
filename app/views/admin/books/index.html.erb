<h1>Manage Books</h1>

<%= link_to "Add New Book", new_admin_book_path, class: "btn btn-primary" %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>ISBN</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.isbn %></td>
        <td>
          <%= link_to "Edit", edit_admin_book_path(book), class: "btn btn-warning" %>
          <%= button_to "Delete", admin_book_path(book), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
